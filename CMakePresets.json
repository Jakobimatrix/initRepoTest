{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "gcc-debug-tests",
      "displayName": "GCC 13 Debug + Tests",
      "description": "Debug build with tests, GCC 13, Linux x64",
      "binaryDir": "${sourceDir}/build-gcc-13-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-13",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-13",
        "BUILD_TESTING": "ON",
        "FUZZER_ENABLED": "OFF"
      },
      "hidden": false
    },
